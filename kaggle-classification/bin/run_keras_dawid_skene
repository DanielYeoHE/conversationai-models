#!/bin/bash

#
# A script to train the kaggle model remotely using ml-engine.
#
# Setup Steps:
# 1. Install the gcloud SDK
# 2. Authenticate with the GCP project you want to use, `gcloud config set project [my-project]`
# 3. Put the train and test data in Cloud Storage,
#      `gsutil cp [DATA_FILE] gs://[BUCKET_NAME]/resources`
#

# Edit these!
BUCKET_NAME=kaggle-model-experiments
JOB_NAME=${USER}_kaggle_training
REGION=us-central1
INPUT_PATH=gs://annotator_models/data_splits
EMBEDDING_PATH=gs://kaggle-model-experiments/resources/glove.6B/glove.6B.100d.txt
#CONFIG=keras_hparam_config.yaml
CONFIG=config.yaml


# --- mean labels
DATE=`date '+%Y%m%d_%H%M%S'`
OUTPUT_PATH=gs://${BUCKET_NAME}/keras_runs/${USER}/${DATE}
LOG_PATH=${OUTPUT_PATH}/logs/

echo "Writing Mean Label model to $OUTPUT_PATH"

# train model
gcloud ml-engine jobs submit training ${JOB_NAME}_mean_${DATE} \
    --job-dir $OUTPUT_PATH \
    --runtime-version 1.4 \
    --module-name keras_trainer.model \
    --package-path keras_trainer \
    --region $REGION \
    --verbosity debug \
    --config ${CONFIG} \
    -- \
    --train_path ${INPUT_PATH}/train_mean_q42017.csv \
    --test_path ${INPUT_PATH}/test_mean_q42017.csv \
    --embeddings_path $EMBEDDING_PATH \
    --log_path ${LOG_PATH} \
    --labels threat,flirtation,identity_hate,insult,obscene,sexual_explicit,frac_very_neg,frac_neg \
    ----write-scored-test-data=true

# --- hat labels
DATE=`date '+%Y%m%d_%H%M%S'`
OUTPUT_PATH=gs://${BUCKET_NAME}/keras_runs/${USER}/${DATE}
LOG_PATH=${OUTPUT_PATH}/logs/
HPARAM_CONFIG=keras_hparam_config.yaml
echo "Writing Dawid Skene model to $OUTPUT_PATH"

gcloud ml-engine jobs submit training ${JOB_NAME}_hat_${DATE} \
    --job-dir $OUTPUT_PATH \
    --runtime-version 1.4 \
    --module-name keras_trainer.model \
    --package-path keras_trainer \
    --region $REGION \
    --verbosity debug \
    --config ${HPARAM_CONFIG} \
    -- \
    --train_path ${INPUT_PATH}/train_hat_q42017.csv \
    --test_path ${INPUT_PATH}/test_hat_q42017.csv \
    --embeddings_path $EMBEDDING_PATH \
    --log_path ${LOG_PATH} \
    --labels threat,flirtation,identity_hate,insult,obscene,sexual_explicit,frac_very_neg,frac_neg \
    ----write-scored-test-data=true
